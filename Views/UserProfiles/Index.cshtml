@model IEnumerable<EnhancedBlogger.Models.UserProfile>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileCreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfileAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileCreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfileAccount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserProfileId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserProfileId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserProfileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
