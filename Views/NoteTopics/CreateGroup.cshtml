@*@model EnhancedBlogger.ViewModels.APersonalLogViewModel*@
@model EnhancedBlogger.Models.LogGrouping //EditViewModel

@{
    ViewData["Title"] = "Enter a New Log Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create a new log group.</h2>
<h4>Hello World</h4>

@{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateGroup">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserProfileId" class="control-label"></label>
                    <input type="number" min="1" value="1" required asp-for="UserProfileId" class="form-control">
                    <span asp-validation-for="UserProfileId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LogGroupingtitle" class="control-label"></label>
                    <input asp-for="LogGroupingtitle" class="form-control" />
                    <span asp-validation-for="LogGroupingtitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LogGroupingComment" class="control-label"></label>
                    <input asp-for="LogGroupingComment" class="form-control" />
                    <span asp-validation-for="LogGroupingComment" class="text-danger"></span>
                </div>
                @{
                    DateTime myNow = DateTime.Now;
                    Model.GroupingCreateDate = myNow;
                }
                <div class="form-group">
                    <label asp-for="GroupingCreateDate" class="control-label"></label>
                    <input asp-for="GroupingCreateDate" class="form-control" readonly />
                    <span asp-validation-for="GroupingCreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create New Group" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}