@model EnhancedBlogger.Models.TopicKeyword

@{
    ViewData["Title"] = "Create a New Keyword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new keyword.</h2>
<h4>TopicKeyword</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateKeyword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>An entry is required for the TopicItemId, enter id from the topic item you are updating, or 
                leave entry at default of 7 for no association with any particular topic item</p>
                <label asp-for="TopicItemId" class="control-label"></label>
                <input required type="number" min="1" value="7" asp-for="TopicItemId" class="form-control">
                <span asp-validation-for="TopicItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicKeywordName" class="control-label"></label>
                <input asp-for="TopicKeywordName" class="form-control" />
                <span asp-validation-for="TopicKeywordName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicKeywordRemark" class="control-label"></label>
                <input asp-for="TopicKeywordRemark" class="form-control" />
                <span asp-validation-for="TopicKeywordRemark" class="text-danger"></span>
            </div>

            @{
                DateTime myNow = DateTime.Now;
                Model.KeywordCreateDate = myNow;
            }
            <div class="form-group">
                <label asp-for="KeywordCreateDate" class="control-label"></label>
                <input readonly type="DateTime-local" asp-for="KeywordCreateDate" class="form-control" />
                <span asp-validation-for="KeywordCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Keyword" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
