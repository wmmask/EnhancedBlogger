@model EnhancedBlogger.Models.GroupedItem

@{
    ViewData["Title"] = "EditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditItem</h2>

<h4>GroupedItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupedItemId" />
            <p>
                An entry is required for the LogGroupingId, enter id from the log group you are commenting on, or
                leave entry at default of XX for no association with any particular blog post.
            </p>
            <div class="form-group">
                <label asp-for="LogGroupingId" class="control-label"></label>
                <input required type="number" min="1" asp-for="LogGroupingId" class="form-control">
                <span asp-validation-for="LogGroupingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>
                    An entry is required for the BlogPostId, enter id from the blogpost you are commenting on, or
                    leave entry at default of 9 for no association with any particular blog post.
                </p>
                <label asp-for="BlogPostId" class="control-label"></label>
                <input required type="number" min="1" value="9" asp-for="BlogPostId" class="form-control">
                <span asp-validation-for="BlogPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupedItemComment" class="control-label"></label>
                <textarea rows="10" cols="100" value="Enter your cooment" asp-for="GroupedItemComment" class="form-control"></textarea>
                <span asp-validation-for="GroupedItemComment" class="text-danger"></span>
            </div>
            @{
                DateTime myNow = DateTime.Now;
                Model.ItemCreateDate = myNow;
            }
            <div class="form-group">
                <label asp-for="ItemCreateDate" class="control-label"></label>
                <input readonly type="DateTime-local" asp-for="ItemCreateDate" class="form-control" />
                <span asp-validation-for="ItemCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="MyPersonalLog">Back to List</a>
</div>
